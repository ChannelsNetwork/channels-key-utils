{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ]
}